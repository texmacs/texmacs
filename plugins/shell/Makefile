CXX ?= g++
RM ?= rm -f

all: bin/tm_shell

CPPFLAGS += -I../../src/System
LDADD += -lutil

bin/% : src/%.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $< -o $@ $(LDFLAGS) $(LDADD)

clean:
	$(RM) bin/tm_shell
